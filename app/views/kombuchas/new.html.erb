<div class="container">
  <div class="row justify-content-center">
    <div class="form">
        <div class="form-title">
         <h1>Create a new kombucha</h1>
        </div>

        <div class="form-questions">
          <%= simple_form_for @kombucha do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :flavour %>
          <%= f.input :description %>
          <%= f.input :quantity %>
          <%= f.input :photo %>
          <%= f.button :submit, class: "btn btn-flat banner-button"  %>
          <% end %>
        </div>

    </div>
  </div>
</div>
